<fest:template xmlns:fest="http://fest.mail.ru">
    <div class="box">
        <form class="user-form">
            <div class="user-form__error" hidden="hidden"> </div>
            <input class="user-form__input user-form__input_spaced" type="text" name="name" placeholder="Login" />
            <input class="user-form__input user-form__input_spaced" type="text" name="email" placeholder="Email" />
            <input class="user-form__input" type="password" name="password" placeholder="Password" />
            <input class="user-form__input" type="password" name="password_repeat" placeholder="Repeat Password" />
            <input class="user-form__submit" type="submit"  value="SIGN UP"> </input>
            <a href="/#" class="button-back">
                BACK
            </a>
        </form>
    </div>

</fest:template>

