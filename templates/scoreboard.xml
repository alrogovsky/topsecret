<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div class="scoreboard">
        <div class="scoreboard__header">Scoreboard</div>
        <table class="scoreboard__table">
            <tr class="scoreboard__table_header-color">
                <td>Username</td>
                <td>Score</td>
            </tr>
            <fest:each iterate="json" index="i" value="top">
                <tr>
                    <td>
                        <fest:value>json[i].name</fest:value>
                    </td>
                    <td>
                        <fest:value>json[i].score</fest:value>
                    </td>
                </tr>
            </fest:each>
        </table>
        <a href="/#" class="scoreboard__button">Back</a>
    </div>
</fest:template>