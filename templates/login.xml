<fest:template xmlns:fest="http://fest.mail.ru">
    <div class="box">
        <form class="user-form">
            <div class="user-form__error" hidden="hidden"> </div>
            <input class="user-form__input" type="text" name="name" placeholder="Login" required="required"/>
            <input class="user-form__input" type="password" name="password" placeholder="Password" required="required"/>
            <input class="user-form__submit" type="submit" value="Log in" />
            <a href="/#" class="button-back">
                Back
            </a>
        </form>
    </div>
</fest:template>

