<fest:template xmlns:fest="http://fest.mail.ru">
    <div class="login-menu">
        <form class="login-form">
            <input class="login-form__input" type="text" name="login" placeholder="Login" required="required"/>
            <input class="login-form__input" type="password" name="password" placeholder="Password" required="required"/>
            <input class="login-form__submit" type="submit" value="Log in" />
        </form>
    </div>
    <a href="/#" class="login-menu__button-back">
        Back
    </a>
</fest:template>

