<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="main-menu">
        <div class="main-menu__header">DA FOOTBALL<sub style="font-size: 15px">v.0.2.0</sub></div>
        <a href="/#lobbies" id="js-play" class="main-menu__button">
            PLAY
        </a>
        <fest:if test="data.user">
            <a href="#" class="qrlink js-open-qr">ENABLE GAMEPAD</a>
        </fest:if>
        <a href="/#scoreboard" class="main-menu__button">
            SCOREBOARD
        </a>
        <a href="/#login" id="js-login" class="main-menu__button">
            LOGIN
        </a>
        <a href="/#signup" id="js-signup" class="main-menu__button">
            SIGN UP
        </a>
        <a href="/#" id="js-logout" class="main-menu__button">
            LOGOUT
        </a>
        <fest:if test="data.user">
            <div class="logged-as">
                Logged in as<fest:space/><fest:value>data.user</fest:value>
            </div>
        </fest:if>
    </div>

    <div class="how-to-play">
        <div class="how-to-play__header">HOW TO PLAY GUIDE!<img src="../img/close.png" class="how-to-play__close" /></div>
        <div class="how-to-play__hint"><img src="../img/hint.png" /></div>
    </div>


</fest:template>