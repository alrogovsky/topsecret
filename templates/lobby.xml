<fest:template xmlns:fest="http://fest.mail.ru" context_name="context">
    <div class="lobby-box">
        <div class="lobby-box__header"><fest:value>context.name</fest:value></div>
        <div>
            <table class="current-lobby-table">
                <tr>
                    <td class="current-lobby-table__td_red">TEAM RED</td>
                    <td class="current-lobby-table__td_blue">TEAM BLUE</td>
                </tr>
                <tr>
                    <td><fest:value>context.team['0'][0]</fest:value></td>
                    <td><fest:value>context.team['1'][0]</fest:value></td>
                </tr>
                <tr>
                    <td><fest:value>context.team['0'][1]</fest:value></td>
                    <td><fest:value>context.team['1'][1]</fest:value></td>
                </tr>
                <tr>
                    <td><fest:value>context.team['0'][2]</fest:value></td>
                    <td><fest:value>context.team['1'][2]</fest:value></td>
                </tr>
            </table>
        </div>
    </div>
</fest:template>