<fest:template xmlns:fest="http://fest.mail.ru">
    <div class="new-lobby-box">
        <div class="new-lobby-box__error js-create-error"> Lobby already exists! </div>
        <div class="new-lobby-box__header">NEW LOBBY</div>
        <form class="new-lobby-box__form">
            <input id="js-autofocus" class="new-lobby-box__input" placeholder="Lobby name" required="required" />
            <label class="new-lobby-box__select_label" for="select">Max players<fest:space></fest:space></label>
            <select class="new-lobby-box__select" id="select">
                <option value="2">2</option>
                <option value="4">4</option>
                <option value="6">6</option>
                <option value="8">8</option>
                <option value="10">10</option>
            </select>
            <input class="new-lobby-box__submit" type="submit" value="CREATE"/>
        </form>
        <a href="/#lobbies" class="button-back">
            BACK
        </a>
    </div>
</fest:template>